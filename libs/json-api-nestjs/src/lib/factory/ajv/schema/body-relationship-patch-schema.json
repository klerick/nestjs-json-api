{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "jsonapi.json",
  "title": "JSON API Request Validation",
  "description": "Validation schema for validating JSON API body",
  "type": "object",
  "properties": {
    "data": {
      "oneOf": [
        {
          "$ref": "#/$defs/dataSchema"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/dataSchema"
          }
        }
      ]
    }
  },
  "required": ["data"],
  "additionalProperties": false,
  "$defs": {
    "dataSchema": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "id": {
              "type": "string"
            }
          },
          "required": ["type", "id"]
        }
      ]
    }
  }
}
