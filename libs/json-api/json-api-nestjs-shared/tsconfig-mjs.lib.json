{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "es2015",
    "target": "ES2022",
    "removeComments": false,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test-d.ts",
    "src/**/___test___/**/*.ts"
  ]
}
