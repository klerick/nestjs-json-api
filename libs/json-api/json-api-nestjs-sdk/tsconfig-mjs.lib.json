  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "module": "es2015",
    "target": "ES2022",
    "types": ["node"],
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*.ts"],
